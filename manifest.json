{
  "manifest_version": 3,
  "name": "QR Code Scanner",
  "version": "1.0",
  "description": "Scan QR codes directly from images on webpages.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [ 
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jsqr.min.js", "content.js"] 
    }
  ],
  "action": { 
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["jsqr.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}